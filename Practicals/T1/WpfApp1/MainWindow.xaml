<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="inputGrid">
            <Frame Content="Frame"/>
            <TextBox x:Name="fileInput"  HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" Text="CSV File Path" TextAlignment="Center" VerticalAlignment="Top" Width="343" TextChanged="TextBox_TextChanged"/>
            <Button Content="Read" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Click="Button_Click"/>
            
        </Grid>
        <Grid x:Name="results" Visibility="Collapsed">
            <ScrollViewer>
            <TextBlock x:Name="resultsText" HorizontalAlignment="Center" Margin="0,26,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="736"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
