<Window x:Class="Async_GUI_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Async_GUI_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="459" Width="649" Background="White">
    <Grid Margin="-75,0,0,-188">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="36" Margin="500,315,0,0" Stroke="Black" VerticalAlignment="Top" Width="155" Fill="#FF22333B" StrokeThickness="0" RadiusX="5" RadiusY="5" Grid.ColumnSpan="2">
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
        </Rectangle>

        <Rectangle HorizontalAlignment="Left" Height="36" Margin="149,315,0,0" Stroke="Black" VerticalAlignment="Top" Width="155" Fill="#FF22333B" StrokeThickness="0" RadiusX="5" RadiusY="5">
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
        </Rectangle>

        <Rectangle HorizontalAlignment="Left" Height="291" Margin="149,13,0,0" Stroke="Black" VerticalAlignment="Top" Width="506" Fill="#FF22333B" StrokeThickness="0" RadiusX="5" RadiusY="5" Grid.ColumnSpan="2">
            <Rectangle.Effect>
                <DropShadowEffect/>
            </Rectangle.Effect>
        </Rectangle>
        <Button x:Name="SearchBtn" Content="Search" HorizontalAlignment="Left" Margin="305,374,0,0" VerticalAlignment="Top" Click="SearchBtn_Click" Width="198" Background="#FFA9927D" BorderBrush="{x:Null}" Foreground="#FFF2F4F3" Height="28"/>
        <TextBox x:Name="IndexBox"  HorizontalAlignment="Left" Margin="500,324,0,0" TextWrapping="Wrap" Text="Index"  VerticalAlignment="Top" Width="155" TextChanged="IndexBox_TextChanged" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFF2F4F3" SelectionBrush="{x:Null}" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="FNameBox" HorizontalAlignment="Left" Margin="381,31,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Foreground="#FFF2F4F3"/>
        <TextBlock x:Name="LNameBox" HorizontalAlignment="Left" Margin="381,77,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Foreground="#FFF2F4F3"/>
        <TextBlock x:Name="AccNoBox" HorizontalAlignment="Left" Margin="381,121,0,0" TextWrapping="Wrap" Text="Account No" VerticalAlignment="Top" Foreground="#FFF2F4F3"/>
        <TextBlock x:Name="BalBox" HorizontalAlignment="Left" Margin="381,169,0,0" TextWrapping="Wrap" Text="Balance" VerticalAlignment="Top" Foreground="#FFF2F4F3"/>
        <TextBlock x:Name="PINBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="PIN" VerticalAlignment="Top" RenderTransformOrigin="0.448,0.524" Margin="381,217,0,0" Foreground="#FFF2F4F3"/>
        <TextBox x:Name="LNameSearchBox"  HorizontalAlignment="Left" Margin="149,324,0,0" TextWrapping="Wrap" Text="Last Name"  VerticalAlignment="Top" Width="155" TextChanged="LNameSearchBox_TextChanged" Foreground="#FFF2F4F3" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}"/>
        <ProgressBar x:Name="Progress" HorizontalAlignment="Left" Height="10" Margin="100,339,0,0" VerticalAlignment="Top" Width="544" Visibility="Collapsed" IsIndeterminate="True" Cursor="Wait" Grid.ColumnSpan="2"/>
        <TextBox x:Name="NumberEntriesBox" HorizontalAlignment="Left" Margin="191,39,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" Foreground="#FFF2F4F3" />

    </Grid>
</Window>
